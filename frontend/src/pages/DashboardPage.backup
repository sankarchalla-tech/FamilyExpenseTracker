import React, { useState, useEffect } from 'react';
import { Link, useNavigate } from 'react-router-dom';
import { useAuth } from '../context/AuthContext';
import { useFamily } from '../context/FamilyContext';
import { familyAPI } from '../api/family';
import { expenseAPI } from '../api/expense';
import { categoryAPI } from '../api/category';
import { analyticsAPI } from '../api/analytics';

import CashFlowSummary from '../components/CashFlowSummary';
import IncomeTable from '../components/IncomeTable';
import EnhancedExpenseTable from '../components/EnhancedExpenseTable';
import CategoryDonutChart from '../components/CategoryDonutChart';
import FutureExpenseTable from '../components/FutureExpenseTable';
import FamilyMembers from '../components/FamilyMembers';

function DashboardPage() {
  const { user } = useAuth();
  const { selectedFamily, setSelectedFamily, isAdmin } = useFamily();
  const [families, setFamilies] = useState([]);
  const [showCreateFamily, setShowCreateFamily] = useState(false);
  const [newFamilyName, setNewFamilyName] = useState('');
  const [showJoinFamily, setShowJoinFamily] = useState(false);
  const [joinFamilyId, setJoinFamilyId] = useState('');
  const [analytics, setAnalytics] = useState(null);
  const [selectedMonth, setSelectedMonth] = useState(new Date());
  const [activeTab, setActiveTab] = useState('dashboard');
  const [expenses, setExpenses] = useState([]);
  const [categories, setCategories] = useState([]);
  const [selectedMember, setSelectedMember] = useState('all');
  const [loading, setLoading] = useState(true);
  const [familyMembers, setFamilyMembers] = useState([]);
  const navigate = useNavigate();

  const handleCreateFamily = async (e) => {
    e.preventDefault();
    try {
      const family = await familyAPI.createFamily(newFamilyName);
      setFamilies([...families, family]);
      setSelectedFamily(family);
      setNewFamilyName('');
      setShowCreateFamily(false);
    } catch (error) {
      console.error('Error creating family:', error);
    }
  };

  useEffect(() => {
    loadFamilies();
  }, []);

  useEffect(() => {
    if (selectedFamily) {
      loadFamilyMembers(selectedFamily.id);
      loadAnalytics(selectedFamily.id, selectedMember);
      if (activeTab === 'expenses') {
        loadExpenses(selectedFamily.id, selectedMember);
      }
    } else {
      setFamilyMembers([]);
    }
  }, [selectedFamily, selectedMonth, activeTab, selectedMember]);

  const loadFamilies = async () => {
    try {
      const data = await familyAPI.getFamilies();
      setFamilies(data);
      
      if (selectedFamily && data.length > 0) {
        const isValidFamily = data.some(family => family.id === selectedFamily.id);
        if (!isValidFamily) {
          setSelectedFamily(data[0]);
        }
      }
      
      if (data.length > 0 && !selectedFamily) {
        setSelectedFamily(data[0]);
      }
    } catch (error) {
      console.error('Error loading families:', error);
    } finally {
      setLoading(false);
    }
  };

  const loadAnalytics = async (familyId, memberId = 'all') => {
    try {
      const year = selectedMonth.getFullYear();
      const month = selectedMonth.getMonth();
      const startDate = new Date(year, month, 1).toISOString().split('T')[0];
      const lastDay = new Date(year, month + 1, 0);
      const endDate = lastDay.toISOString().split('T')[0];

      const data = await analyticsAPI.getAnalytics(familyId, startDate, endDate, memberId === 'all' ? null : memberId);
      setAnalytics(data);
    } catch (error) {
      console.error('Error loading analytics:', error);
    }
  };

  const loadExpenses = async (familyId, memberId = 'all') => {
    try {
      const year = selectedMonth.getFullYear();
      const month = selectedMonth.getMonth();
      const startDate = new Date(year, month, 1).toISOString().split('T')[0];
      const lastDay = new Date(year, month + 1, 0);
      const endDate = lastDay.toISOString().split('T')[0];

      const filters = { startDate, endDate };
      if (memberId && memberId !== 'all') {
        filters.userId = parseInt(memberId);
      }

      const [expensesData, categoriesData] = await Promise.all([
        expenseAPI.getExpenses(familyId, filters),
        categoryAPI.getCategories(familyId)
      ]);
      setExpenses(expensesData);
      setCategories(categoriesData);
    } catch (error) {
      console.error('Error loading expenses:', error);
    }
  };



  const handleJoinFamily = async (e) => {
    e.preventDefault();
    try {
      const family = await familyAPI.getFamily(joinFamilyId);
      if (family) {
        setSelectedFamily(family);
        setShowJoinFamily(false);
        setJoinFamilyId('');
      }
    } catch (error) {
      if (error.response?.status === 403) {
        alert('Access denied. You are not a member of this family. Please ask an admin to add you.');
      } else {
        alert('Family not found or access denied.');
      }
    }
  };

  const loadFamilyMembers = async (familyId) => {
    try {
      const family = await familyAPI.getFamily(familyId);
      setFamilyMembers(family.members || []);
    } catch (error) {
      console.error('Error loading family members:', error);
      setFamilyMembers([]);
    }
  };

  if (loading) {
    return <div className="min-h-screen flex items-center justify-center">Loading...</div>;
  }







  return (
    <div className="min-h-screen bg-gray-50 dark:bg-gray-900">
      <nav className="bg-white dark:bg-gray-800 shadow-sm">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="flex justify-between h-16 items-center">
            <div className="flex items-center gap-3">
              <h1 className="text-xl font-bold text-gray-900 dark:text-white">
                Family Expense Tracker
              </h1>
              {selectedFamily && isAdmin() && (
                <span className="px-2 py-1 text-xs bg-yellow-100 dark:bg-yellow-900 text-yellow-700 dark:text-yellow-300 rounded-full font-medium">
                  Admin
                </span>
              )}
            </div>
            <div className="flex items-center gap-4">
              {console.log('Dashboard: Render buttons, families.length =', families.length)}
              <button
                onClick={() => setShowJoinFamily(true)}
                className="px-4 py-2 bg-yellow-100 dark:bg-yellow-900 text-yellow-700 dark:text-yellow-300 rounded-lg text-sm"
              >
                Join Family
              </button>
              <button
                onClick={() => setShowCreateFamily(true)}
                className="px-4 py-2 bg-green-100 dark:bg-green-900 text-green-700 dark:text-green-300 rounded-lg text-sm"
              >
                Create Family
              </button>
              <button
                onClick={() => navigate('/profile')}
                className="px-4 py-2 bg-purple-100 dark:bg-purple-900 text-purple-700 dark:text-purple-300 rounded-lg text-sm"
              >
                Profile
              </button>
              {selectedFamily && (
                <button
                  onClick={() => navigate(`/family/${selectedFamily.id}/settings`)}
                  className="px-4 py-2 bg-orange-100 dark:bg-orange-900 text-orange-700 dark:text-orange-300 rounded-lg text-sm"
                >
                  Family Settings
                </button>
              )}
            </div>
          </div>
        </div>
      </nav>

      <main className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        {/* Family Selection Section */}
        {families.length > 0 && (
          <div className="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6 mb-6">
            <div className="flex justify-between items-center mb-4">
              <h3 className="text-lg font-semibold text-gray-900 dark:text-white">
                Select Family
              </h3>
              <button
                onClick={() => setShowCreateFamily(true)}
                className="px-4 py-2 bg-green-100 dark:bg-green-900 text-green-700 dark:text-green-300 rounded-lg text-sm"
              >
                + Create Family
              </button>
            </div>
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
              {families.map((family) => (
                <div 
                  key={family.id} 
                  className={`border rounded-lg p-4 cursor-pointer transition-all ${
                    selectedFamily?.id === family.id 
                      ? 'border-blue-500 bg-blue-50 dark:bg-blue-900/20' 
                      : 'border-gray-200 dark:border-gray-700 hover:border-gray-300 dark:hover:border-gray-600'
                  }`}
                  onClick={() => setSelectedFamily(family)}
                >
                  <div className="flex justify-between items-start mb-2">
                    <div>
                      <h4 className="font-semibold text-gray-900 dark:text-white">
                        {family.name}
                      </h4>
                      <span className={`inline-flex items-center px-2 py-1 rounded-full text-xs font-medium ${
                        family.role === 'admin' 
                          ? 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200'
                          : 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200'
                      }`}>
                        {family.role}
                      </span>
                    </div>
                  </div>
                  <div className="text-sm text-gray-600 dark:text-gray-400">
                    <p>Family ID: {family.id}</p>
                    <p>Members: {family.members?.length || 0}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}

        {selectedFamily ? (
          <>
            <div className="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6 mb-6">
              <div className="flex justify-between items-center mb-4">
                <h3 className="text-xl font-bold text-gray-900 dark:text-white">
                  {selectedFamily.name}
                  {isAdmin() && (
                    <span className="ml-2 px-2 py-1 text-xs bg-yellow-100 dark:bg-yellow-900 text-yellow-700 dark:text-yellow-300 rounded-full font-medium">
                      Admin
                    </span>
                  )}
                </h3>
                <p className="text-gray-600 dark:text-gray-400">
                  Manage your family's finances and track expenses together
                </p>
              </div>

              {/* Family Overview Stats */}
              <div className="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
                <div className="space-y-6">
                  <CashFlowSummary analytics={analytics} />
                  <CategoryDonutChart analytics={analytics} />
                </div>
                <div className="space-y-6">
                  <div className="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
                    <h3 className="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                      Family Members
                    </h3>
                    <div className="grid grid-cols-2 gap-4">
                      <div className="bg-blue-50 dark:bg-blue-900/20 p-4 rounded-lg">
                        <p className="text-blue-900 dark:text-blue-300 mb-1">Admins</p>
                        <p className="text-2xl font-bold text-blue-700 dark:text-blue-400">
                          {familyMembers.filter(m => m.role === 'admin').length || 0}
                        </p>
                      </div>
                      <div className="bg-purple-50 dark:bg-purple-900/20 p-4 rounded-lg">
                        <p className="text-purple-900 dark:text-purple-300 mb-1">Members</p>
                        <p className="text-2xl font-bold text-purple-700 dark:text-purple-400">
                          {familyMembers.filter(m => m.role === 'member').length || 0}
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

            {/* Tab Navigation */}
            <div className="flex flex-wrap gap-3 mb-8">
              <button
                onClick={() => setActiveTab('dashboard')}
                className={`px-4 py-2 font-medium rounded-lg ${
                  activeTab === 'dashboard'
                    ? 'bg-blue-600 text-white'
                    : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600'
                }`}
              >
                Overview
              </button>
              <button
                onClick={() => setActiveTab('income')}
                className={`px-4 py-2 font-medium rounded-lg ${
                  activeTab === 'income'
                    ? 'bg-green-600 text-white'
                    : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600'
                }`}
              >
                Income
              </button>
              <button
                onClick={() => setActiveTab('expenses')}
                className={`px-4 py-2 font-medium rounded-lg ${
                  activeTab === 'expenses'
                    ? 'bg-blue-600 text-white'
                    : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600'
                }`}
              >
                Expenses
              </button>
              <button
                onClick={() => setActiveTab('analytics')}
                className={`px-4 py-2 font-medium rounded-lg ${
                  activeTab === 'analytics'
                    ? 'bg-purple-600 text-white'
                    : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600'
                }`}
              >
                Analytics
              </button>
              <button
                onClick={() => navigate(`/family/${selectedFamily.id}/settings`)}
                className="px-4 py-2 bg-orange-100 dark:bg-orange-900 text-orange-700 dark:text-orange-300 rounded-lg text-sm"
              >
                Family Settings
              </button>
            </div>

            {/* Month and Member Filters */}
            <div className="flex flex-col sm:flex-row gap-4 items-start sm:items-end mb-8">
              <div className="flex-1 w-full sm:w-auto">
                <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                  Month
                </label>
                <input
                  type="month"
                  value={selectedMonth.toISOString().slice(0, 7)}
                  onChange={(e) => setSelectedMonth(new Date(e.target.value + '-01'))}
                  className="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white"
                />
                <button
                  onClick={() => setSelectedMonth(new Date())}
                  className="px-3 py-2 text-sm bg-gray-200 dark:bg-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-500"
                  title="Current Month"
                >
                  Today
                </button>
              </div>
              <div className="flex-1 w-full sm:w-auto">
                <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                  Filter by Member
                </label>
                <select
                  value={selectedMember}
                  onChange={(e) => setSelectedMember(e.target.value)}
                  className="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white"
                  disabled={!selectedFamily}
                >
                  <option value="all">All Members</option>
                  {familyMembers.map(member => (
                    <option key={member.id} value={member.id}>{member.name}</option>
                  ))}
                </select>
              </div>
            </div>

            {activeTab === 'dashboard' && analytics && (
              <div className="space-y-6">
                <CashFlowSummary analytics={analytics} />
                
                <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
                  <div className="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
                    <h3 className="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                      Financial Overview
                    </h3>
                    <div className="space-y-4">
                      <div className="flex justify-between items-center">
                        <span className="text-gray-600 dark:text-gray-400">Total Income</span>
                        <span className="text-xl font-bold text-green-600 dark:text-green-400">
                          ₹{analytics.totalIncome?.toFixed(2) || '0.00'}
                        </span>
                      </div>
                      <div className="flex justify-between items-center">
                        <span className="text-gray-600 dark:text-gray-400">Total Expenses</span>
                        <span className="text-xl font-bold text-red-600 dark:text-red-400">
                          ₹{analytics.total?.toFixed(2) || '0.00'}
                        </span>
                      </div>
                      <div className="flex justify-between items-center">
                        <span className="text-gray-600 dark:text-gray-400">Net Balance</span>
                        <span className={`text-xl font-bold ${
                          analytics.netBalance >= 0 ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400'
                        }`}>
                          ₹{analytics.netBalance?.toFixed(2) || '0.00'}
                        </span>
                      </div>
                    </div>
                  </div>
                </div>

                <div className="space-y-6">
                  <div className="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
                    <h3 className="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                      Expenses by Category
                    </h3>
                    <CategoryDonutChart analytics={analytics} />
                  </div>

                  <div className="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
                    <h3 className="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                      Member Spending
                    </h3>
                    <div className="space-y-3">
                      {analytics.perMember?.slice(0, 5).map((member) => (
                        <div key={member.id} className="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                          <span className="text-gray-900 dark:text-white">{member.name}</span>
                          <span className="font-semibold text-gray-900 dark:text-white">
                            ₹{member.total?.toFixed(2) || '0.00'}
                          </span>
                        </div>
                      ))}
                      {analytics.perMember?.length > 5 && (
                        <p className="text-center text-gray-500 dark:text-gray-400">
                          +{analytics.perMember.length - 5} more members
                        </p>
                      )}
                    </div>
                  </div>
                </div>
              </div>
            </div>
            )}

            {activeTab === 'income' && (
              <IncomeTable familyId={selectedFamily?.id} selectedMonth={selectedMonth} selectedMember={selectedMember} />
            )}

            {activeTab === 'expenses' && (
              <>
                <div className="flex flex-col sm:flex-row justify-between items-start gap-4 mb-6">
                  <div>
                    <h2 className="text-2xl font-bold text-gray-900 dark:text-white">Expenses</h2>
                    <span className="text-sm font-normal text-gray-500 dark:text-gray-400">
                      (Total: {expenses.length})
                    </span>
                  </div>
                </div>
                <EnhancedExpenseTable 
                  familyId={selectedFamily?.id} 
                  expenses={expenses} 
                  categories={categories}
                  selectedMember={selectedMember}
                  selectedMonth={selectedMonth}
                />
              </>
            )}

            {activeTab === 'analytics' && analytics && (
              <div className="space-y-6">
                <h2 className="text-2xl font-bold text-gray-900 dark:text-white mb-6">Analytics</h2>
                
                <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
                  <div className="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
                    <h3 className="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                      Financial Overview
                    </h3>
                    <div className="space-y-4">
                      <div className="flex justify-between items-center">
                        <span className="text-gray-600 dark:text-gray-400">Total Income</span>
                        <span className="text-xl font-bold text-green-600 dark:text-green-400">
                          ₹{analytics.totalIncome?.toFixed(2) || '0.00'}
                        </span>
                      </div>
                      <div className="flex justify-between items-center">
                        <span className="text-gray-600 dark:text-gray-400">Total Expenses</span>
                        <span className="text-xl font-bold text-red-600 dark:text-red-400">
                          ₹{analytics.total?.toFixed(2) || '0.00'}
                        </span>
                      </div>
                      <div className="flex justify-between items-center">
                        <span className="text-gray-600 dark:text-gray-400">Net Balance</span>
                        <span className={`text-xl font-bold ${
                          analytics.netBalance >= 0 ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400'
                        }`}>
                          ₹{analytics.netBalance?.toFixed(2) || '0.00'}
                        </span>
                      </div>
                    </div>
                  </div>
                </div>

                <div className="space-y-6">
                  <div className="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
                    <h3 className="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                      Expenses by Category
                    </h3>
                    <CategoryDonutChart analytics={analytics} />
                  </div>

                  <div className="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
                    <h3 className="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                      Member Spending
                    </h3>
                    <div className="space-y-3">
                      {analytics.perMember?.slice(0, 5).map((member) => (
                        <div key={member.id} className="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                          <span className="text-gray-900 dark:text-white">{member.name}</span>
                          <span className="font-semibold text-gray-900 dark:text-white">
                            ₹{member.total?.toFixed(2) || '0.00'}
                          </span>
                        </div>
                      ))}
                      {analytics.perMember?.length > 5 && (
                        <p className="text-center text-gray-500 dark:text-gray-400">
                          +{analytics.perMember.length - 5} more members
                        </p>
                      )}
                    </div>
                  </div>
                </div>
              </div>
            )}
          </>
        )}

        {/* Create Family Modal */}
        {showCreateFamily && (
          <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4">
            <div className="bg-white dark:bg-gray-800 rounded-xl shadow-xl p-6 w-full max-w-md">
              <h3 className="text-xl font-bold text-gray-900 dark:text-white mb-4">
                Create New Family
              </h3>
              <form onSubmit={handleCreateFamily} className="space-y-4">
                <div>
                  <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Family Name
                  </label>
                  <input
                    type="text"
                    required
                    value={newFamilyName}
                    onChange={(e) => setNewFamilyName(e.target.value)}
                    className="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white"
                    placeholder="My Family"
                  />
                </div>
                <div className="flex gap-3 justify-end">
                  <button
                    type="button"
                    onClick={() => setShowCreateFamily(false)}
                    className="px-4 py-2 text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white"
                  >
                    Cancel
                  </button>
                  <button
                    type="submit"
                    className="px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg"
                  >
                    Create
                  </button>
                </div>
              </form>
            </div>
          </div>
        )}

        {/* Join Family Modal */}
        {showJoinFamily && (
          <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4">
            <div className="bg-white dark:bg-gray-800 rounded-xl shadow-xl p-6 w-full max-w-md">
              <h3 className="text-xl font-bold text-gray-900 dark:text-white mb-4">
                Join Existing Family
              </h3>
              <form onSubmit={handleJoinFamily} className="space-y-4">
                <div>
                  <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Family ID
                  </label>
                  <input
                    type="text"
                    required
                    value={joinFamilyId}
                    onChange={(e) => setJoinFamilyId(e.target.value)}
                    className="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white"
                    placeholder="Enter family ID number"
                  />
                  <p className="text-xs text-gray-500 dark:text-gray-400 mt-1">
                    Ask your family admin for family ID
                  </p>
                </div>
                <div className="bg-yellow-50 dark:bg-yellow-900/20 p-3 rounded-lg">
                  <p className="text-sm text-yellow-800 dark:text-yellow-200">
                    <strong>Note:</strong> You can only join families where an admin has already added you as a member.
                    If you can't access family, please ask admin to add your email first.
                  </p>
                </div>
                <div className="flex gap-3 justify-end">
                  <button
                    type="button"
                    onClick={() => {
                      setShowJoinFamily(false);
                      setJoinFamilyId('');
                    }}
                    className="px-4 py-2 text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white"
                  >
                    Cancel
                  </button>
                  <button
                    type="submit"
                    className="px-6 py-2 bg-yellow-600 hover:bg-yellow-700 text-white font-medium rounded-lg"
                  >
                    Join Family
                  </button>
                </div>
              </form>
            </div>
          </div>
        )}
      </main>
                </h3>
                <p className="text-gray-600 dark:text-gray-400">
                  Manage your family's finances and track expenses together
                </p>
              </div>

              {/* Family Overview Stats */}
              <div className="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
                <div className="space-y-6">
                  <CashFlowSummary analytics={analytics} />
                  <CategoryDonutChart analytics={analytics} />
                </div>
                <div className="space-y-6">
                  <div className="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
                    <h3 className="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                      Family Members
                    </h3>
                    <div className="grid grid-cols-2 gap-4">
                      <div className="bg-blue-50 dark:bg-blue-900/20 p-4 rounded-lg">
                        <p className="text-blue-900 dark:text-blue-300 mb-1">Admins</p>
                        <p className="text-2xl font-bold text-blue-700 dark:text-blue-400">
                          {familyMembers.filter(m => m.role === 'admin').length || 0}
                        </p>
                      </div>
                      <div className="bg-purple-50 dark:bg-purple-900/20 p-4 rounded-lg">
                        <p className="text-purple-900 dark:text-purple-300 mb-1">Members</p>
                        <p className="text-2xl font-bold text-purple-700 dark:text-purple-400">
                          {familyMembers.filter(m => m.role === 'member').length || 0}
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            {/* Tab Navigation */}
            <div className="flex flex-wrap gap-3 mb-8">
              <button
                onClick={() => setActiveTab('dashboard')}
                className={`px-4 py-2 font-medium rounded-lg ${
                  activeTab === 'dashboard'
                    ? 'bg-blue-600 text-white'
                    : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600'
                }`}
              >
                Overview
              </button>
              <button
                onClick={() => setActiveTab('income')}
                className={`px-4 py-2 font-medium rounded-lg ${
                  activeTab === 'income'
                    ? 'bg-green-600 text-white'
                    : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600'
                }`}
              >
                Income
              </button>
              <button
                onClick={() => setActiveTab('expenses')}
                className={`px-4 py-2 font-medium rounded-lg ${
                  activeTab === 'expenses'
                    ? 'bg-blue-600 text-white'
                    : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600'
                }`}
              >
                Expenses
              </button>
              <button
                onClick={() => setActiveTab('analytics')}
                className={`px-4 py-2 font-medium rounded-lg ${
                  activeTab === 'analytics'
                    ? 'bg-purple-600 text-white'
                    : 'bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600'
                }`}
              >
                Analytics
              </button>
              {selectedFamily && (
                <button
                  onClick={() => navigate(`/family/${selectedFamily.id}/settings`)}
                  className="px-4 py-2 bg-orange-100 dark:bg-orange-900 text-orange-700 dark:text-orange-300 rounded-lg text-sm"
                >
                  Family Settings
                </button>
              )}
            </div>

            {/* Month and Member Filters */}
            <div className="flex flex-col sm:flex-row gap-4 items-start sm:items-end mb-8">
              <div className="flex-1 w-full sm:w-auto">
                <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                  Month
                </label>
                <input
                  type="month"
                  value={selectedMonth.toISOString().slice(0, 7)}
                  onChange={(e) => setSelectedMonth(new Date(e.target.value + '-01'))}
                  className="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white"
                />
                <button
                  onClick={() => setSelectedMonth(new Date())}
                  className="px-3 py-2 text-sm bg-gray-200 dark:bg-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-500"
                  title="Current Month"
                >
                  Today
                </button>
              </div>
              <div className="flex-1 w-full sm:w-auto">
                <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                  Filter by Member
                </label>
                <select
                  value={selectedMember}
                  onChange={(e) => setSelectedMember(e.target.value)}
                  className="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white"
                  disabled={!selectedFamily}
                >
                  <option value="all">All Members</option>
                  {familyMembers.map(member => (
                    <option key={member.id} value={member.id}>{member.name}</option>
                  ))}
                </select>
              </div>
            </div>
          </>
        ) : (
          /* No Family Selected State */
          <div className="text-center py-12">
            <h2 className="text-2xl font-bold text-gray-900 dark:text-white mb-4">
              Welcome, {user?.name}!
            </h2>
            <div className="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-8 max-w-md">
              <h3 className="text-lg font-semibold text-gray-900 dark:text-white mb-6">
                No Family Selected
              </h3>
              <p className="text-gray-600 dark:text-gray-400 mb-6">
                You need to create or join a family to start tracking expenses.
              </p>
              <div className="space-y-4">
                <button
                  onClick={() => setShowJoinFamily(true)}
                  className="w-full px-6 py-3 bg-yellow-600 hover:bg-yellow-700 text-white font-medium rounded-lg mb-3"
                >
                  Join Existing Family
                </button>
                <button
                  onClick={() => setShowCreateFamily(true)}
                  className="w-full px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg"
                >
                  Create New Family
                </button>
              </div>
            </div>
          </div>
        )}

        {selectedFamily && (
          <>
            {activeTab === 'dashboard' && analytics && (
              <div className="space-y-6">
                <CashFlowSummary analytics={analytics} />
                
                <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
                  <div className="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
                    <h3 className="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                      Family Members
                    </h3>
                    <div className="grid grid-cols-2 gap-4">
                      <div className="bg-blue-50 dark:bg-blue-900/20 p-4 rounded-lg">
                        <p className="text-blue-900 dark:text-blue-300 mb-1">Admins</p>
                        <p className="text-2xl font-bold text-blue-700 dark:text-blue-400">
                          {familyMembers.filter(m => m.role === 'admin').length || 0}
                        </p>
                      </div>
                      <div className="bg-purple-50 dark:bg-purple-900/20 p-4 rounded-lg">
                        <p className="text-purple-900 dark:text-purple-300 mb-1">Members</p>
                        <p className="text-2xl font-bold text-purple-700 dark:text-purple-400">
                          {familyMembers.filter(m => m.role === 'member').length || 0}
                        </p>
                      </div>
                    </div>
                  </div>

                  <CategoryDonutChart analytics={analytics} />
                </div>
              </div>
            )}

            {activeTab === 'income' && (
              <IncomeTable familyId={selectedFamily?.id} selectedMonth={selectedMonth} selectedMember={selectedMember} />
            )}

            {activeTab === 'expenses' && (
              <>
                <div className="flex flex-col sm:flex-row justify-between items-start gap-4 mb-6">
                  <div>
                    <h2 className="text-2xl font-bold text-gray-900 dark:text-white">Expenses</h2>
                    <span className="text-sm font-normal text-gray-500 dark:text-gray-400">
                      (Total: {expenses.length})
                    </span>
                  </div>
                </div>
                <EnhancedExpenseTable 
                  familyId={selectedFamily?.id} 
                  expenses={expenses} 
                  categories={categories}
                  selectedMember={selectedMember}
                  selectedMonth={selectedMonth}
                />
              </>
            )}

            {activeTab === 'analytics' && analytics && (
              <div className="space-y-6">
                <h2 className="text-2xl font-bold text-gray-900 dark:text-white mb-6">Analytics</h2>
                
                <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
                  <div className="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
                    <h3 className="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                      Financial Overview
                    </h3>
                    <div className="space-y-4">
                      <div className="flex justify-between items-center">
                        <span className="text-gray-600 dark:text-gray-400">Total Income</span>
                        <span className="text-xl font-bold text-green-600 dark:text-green-400">
                          ₹{analytics.totalIncome?.toFixed(2) || '0.00'}
                        </span>
                      </div>
                      <div className="flex justify-between items-center">
                        <span className="text-gray-600 dark:text-gray-400">Total Expenses</span>
                        <span className="text-xl font-bold text-red-600 dark:text-red-400">
                          ₹{analytics.total?.toFixed(2) || '0.00'}
                        </span>
                      </div>
                      <div className="flex justify-between items-center">
                        <span className="text-gray-600 dark:text-gray-400">Net Balance</span>
                        <span className={`text-xl font-bold ${
                          analytics.netBalance >= 0 ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400'
                        }`}>
                          ₹{analytics.netBalance?.toFixed(2) || '0.00'}
                        </span>
                      </div>
                    </div>
                  </div>

                  <div className="space-y-6">
                    <div className="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
                      <h3 className="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                        Expenses by Category
                      </h3>
                      <CategoryDonutChart analytics={analytics} />
                    </div>

                    <div className="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
                      <h3 className="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                        Member Spending
                      </h3>
                      <div className="space-y-3">
                        {analytics.perMember?.slice(0, 5).map((member) => (
                          <div key={member.id} className="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                            <span className="text-gray-900 dark:text-white">{member.name}</span>
                            <span className="font-semibold text-gray-900 dark:text-white">
                              ₹{member.total?.toFixed(2) || '0.00'}
                            </span>
                          </div>
                        ))}
                        {analytics.perMember?.length > 5 && (
                          <p className="text-center text-gray-500 dark:text-gray-400">
                            +{analytics.perMember.length - 5} more members
                          </p>
                        )}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            )}
          </>
        )}


      </main>
    </div>
  );
}

export default DashboardPage;